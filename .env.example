# Telegram
TG_BOT_TOKEN=
TG_BOT_NAME=MaschaBot

# LLM for Java bot
OPENAI_API_KEY=
CHATGPT_API_URL=https://openrouter.ai/api
CHATGPT_MODEL=x-ai/grok-4.1-fast

# Optional voice/translate
VOICE_MODE=false
YANDEX_TRANSLATE_API_KEY=
YANDEX_SPEECH_API_KEY=

# Python yt-video-analyzer
OPENROUTER_API_KEY=
VIDEO_ANALYZER_LLM_MODEL=openai/gpt-4o-mini
VIDEO_ANALYZER_LLM_TEMPERATURE=0.35
VIDEO_ANALYZER_URL=http://yt-video-analyzer:8000/analyze

# Selfie via fal.ai
FAL_API_KEY=
FAL_BASE_URL=https://fal.run
FAL_SELFIE_MODEL_PATH=fal-ai/flux/dev/image-to-image
FAL_TIMEOUT_SEC=90
HOST_SELFIE_REFERENCE_FILE=/opt/masha/selfie/reference.jpg
SELFIE_REFERENCE_PATH=/app/selfie-reference.jpg
SELFIE_DAILY_LIMIT=5
FAVOURITE_USER_IDS=
SELFIE_PROMPT_BASE=Realistic smartphone selfie of the same woman as in the reference image. Photorealistic, natural skin texture, casual human vibe, candid shot as if taken right now. No stylization, no illustration, no CGI, no text overlay. Appearance, outfit and styling must match the scene, weather and season naturally. Avoid mismatches like summer clothes in winter scenes.
SELFIE_PROMPT_WITH_USER_SCENE={base} Follow the user's requested scene/location as top priority. User request: {user_request}
SELFIE_PROMPT_WITH_RANDOM_SCENE={base} Scene: {scene}. User request to follow if possible (without conflicting with scene realism): {user_request}

# yt-dlp behavior in analyzer
HOST_YTDLP_COOKIES_FILE=/opt/masha/cookies/youtube-cookies.txt
YTDLP_COOKIES_PATH=/app/cookies.txt
YTDLP_MANUAL_MODE=true
YTDLP_INCLUDE_REGULAR_SUBS=false
YTDLP_FALLBACK_REGULAR_ON_EMPTY=true
YTDLP_FALLBACK_LANGS_ON_EMPTY=true
YTDLP_SUB_LANGS=ru,ru-orig
YTDLP_SUB_LANGS_FALLBACK=en,en-orig
YTDLP_EXTRACTOR_ARGS=
YTDLP_KEEP_TMP=false
ANALYZE_CACHE_TTL_SEC=900
YTDLP_DEBUG=false
VIDEO_ANALYZER_LOG_LEVEL=INFO
